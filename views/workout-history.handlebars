<!-- Workout History View -->
<div class="container mt-5">
  <h1 class="text-center">Workout History</h1>
  <p class="text-center">Log your workout here</p>
  <button class="btn btn-primary" id="open-modal-button">Log Workout</button>
</div>

<div class="modal fixed top-0 left-0 w-full h-full flex items-center justify-center hidden" id="workoutModal">
  <div class="modal-content bg-white rounded-lg p-10 max-w-sm w-full md:w-1/2">
    <div class="modal-header text-lg font-medium w-full">
      <span class="close cursor-pointer text-2xl float-right">&times;</span>
      <h2 class="text-3xl">Log Your Workout</h2>
    </div>
    <div class="modal-body">
      <form class="w-full max-w-lg">
        <div class="form-group mb-5">
          <label for="workoutName" class="block text-gray-700 font-medium mb-2">Workout Name</label>
          <input type="text" class="form-control bg-gray-200 border border-gray-400 rounded-lg p-3 w-full" id="workoutName">
        </div>
        <div class="form-group mb-5">
          <label for="workoutDescription" class="block text-gray-700 font-medium mb-2">Workout Description</label>
          <textarea class="form-control bg-gray-200 border border-gray-400 rounded-lg p-3 w-full" id="workoutDescription" rows="3"></textarea>
        </div>
        <div class="form-group mb-5">
          <label for="workoutDate" class="block text-gray-700 font-medium mb-2">Workout Date</label>
          <input type="date" class="form-control bg-gray-200 border border-gray-400 rounded-lg p-3 w-full" id="workoutDate">
        </div>
        <div class="form-group mb-5">
          <label for="workoutTime" class="block text-gray-700 font-medium mb-2">Workout Time</label>
          <input type="time" class="form-control bg-gray-200 border border-gray-400 rounded-lg p-3 w-full" id="workoutTime">
        </div>
        </form>
    </div>
    <div class="modal-footer">
      <button id="save-workout" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Save</button>
      <button id="close-workout" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">Close</button>
    </div>
  </div>
</div>

