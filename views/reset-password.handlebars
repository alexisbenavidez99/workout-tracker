<div class="p-10 max-w-sm mx-auto mt-10 bg-white rounded-lg shadow-lg">
  <h2 class="text-lg font-medium text-gray-700 mb-5">Reset Password</h2>
  <form id="form2">
    <div class="mb-5">
      <label for="password" class="block text-gray-700 font-medium mb-2">New Password</label>
      <input type="password" class="bg-gray-200 border border-gray-400 rounded-lg p-3 w-full" id="password">
    </div>
    <div class="mb-5">
      <label for="confirmPassword" class="block text-gray-700 font-medium mb-2">Confirm Password</label>
      <input type="password" class="bg-gray-200 border border-gray-400 rounded-lg p-3 w-full" id="confirmPassword">
    </div>
    <button type="submit" class="py-3 px-4 bg-blue-500 hover:bg-blue-600 text-white rounded-lg">Submit</button>
  </form>
</div>
<p id="token" class=" hidden">{{token}}</p>